<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.CardView.Item" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Card.Small</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="Widget.App.CardView.Detail" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Card.Medium</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorPrimary">@color/black_800</item>
        <item name="colorSurface">@color/white_overlay</item>
        <item name="colorOnSurface">@color/black_900</item>
        <item name="colorSecondary">@color/black_800</item>

    </style>
</resources>